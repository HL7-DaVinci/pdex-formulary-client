<section class='container'>
<h2 class="text-light welcome-text">Connect to a Patient FHIR server</h2>
<p class="text-center text-muted mb-4">Dont't have credentials? <%= link_to "Register client here", new_register_path, class: "fw-bold text-primary" %></p>
	<% if @client %>
		<p class="text-success m-auto client-connected" style='text-align: center'>
			Connected to <%= server_url -%>
		</p>
		<p class="text-success m-auto client-connected" style='text-align: center'>
			Patient <%= patient_id -%>
		</p>
	<% else %>
		<p class="text-danger m-auto" style='text-align: center'>No Connection Established</p>
	<% end %>

	<section class='row col-12'>
		<div class='row'>
			<%= form_tag launch_path, method: "get", class: "form-inline welcome-form", id: "server-form" do %>
				<div class='col'></div>
				<div class='form-group col-md-7 last'>
					<label class="float-left text-light"> FHIR Server with Patients</label>
					<%= text_field_tag :iss_url, cookies[:iss_url], class: "form-control",
                                                     placeholder: "http://cpcds-ri.org/cpcds-server/fhir" %>
					<label class="float-left text-light"> Client ID</label>
					<%= text_field_tag :client_id, cookies[:client_id], class: "form-control",
                                                         placeholder: "Client ID" %>
					<label class="float-left text-light"> Client Secret</label>
					<%= text_field_tag :client_secret, cookies[:client_secret], class: "form-control",
                                                                 placeholder: "Client Secret" %>
					<%= button_tag "Connect", class: "btn btn-primary col-md-2 connect", id: "server-url" %>
				</div>
				<div class='col'></div>
			<% end %>
		</div>

	</section>
</section>


