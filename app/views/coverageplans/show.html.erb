
<section class='container'>
	<div class='d-flex flex-column justify-content-center mb-4'>
		<h2 class='float-left text-white'>
      Formulary:&nbsp;<%= sanitize(@plandata[:name]) %>
		</h2>
    <div class='card bg-transparent text-white'>
      <div class='card-body text-center'>
        <table class='table table-bordered text-white'>
          <colgroup>
            <col style='width: 20px;%'>
            <col style='width: 20px;%'>
            <col style='width: 60px;%'>
          </colgroup>
          <thead>
            <tr>
              <th>Type</th>
              <th>Identifier</th>
              <th>Payer</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= sanitize(@plandata[:type]) %></td>
              <td><%= sanitize(@plandata[:planid]) %></td>
              <td>
                <% @plandata[:payers].each do |payer| %>
                  <%= link_to sanitize(payer[:name]), "/payerplans/#{payer[:id]}" %><br/>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
	</div>
  <section class='col-12'>
    <div class='row'>
      <%= form_tag formularies_path, method: 'get', class: 'form-inline welcome-form' do %>
        <%= hidden_field_tag 'coverage', sanitize(@plandata[:id]) %>
        <div class='col'></div>
          <%= button_tag 'View Formulary Drugs', class: 'btn btn-primary col-md-12', id: 'formulary-url' %>
        <div class='col'></div>
      <% end %>
    </div>
  </section>
</section>
