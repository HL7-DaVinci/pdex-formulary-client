<section class='container'>
	<section class='row col-12'>
		<div class='col-12'>
			<h3 class='float-left text-white'>Formulary Drugs</h3>
      <%= render 'partials/query' %>
			<div class='btn-group float-right mt-2' role='group'>
				<%= link_to 'Previous', formularies_path(page: 'previous'), class: 'btn btn-outline-primary' %>
				<%= link_to 'Next', 		formularies_path(page: 'next'), 		class: 'btn btn-outline-primary' %>
			</div>
		</div>
		<table class='table table-dark'>
			<tr>
				<th scope='col'>Drug</th>
				<th scope='col'>Tier</th>
				<th scope='col'>Copay</th>
				<th scope='col'>CoInsurance</th>
				<th scope='col'>Drug Plan</th>
				<th scope='col'>RxNorm</th>
				<th scope='col'>ID</th>
			</tr>
			<% @formularydrugs.each do |formulary_drug| %>
				<tr>
					<td>
						<div class='drug'>
							<%= link_to formulary_drug.drug_name, formulary_drug.formulary_id_path %>
						</div>
						<% if formulary_drug.prior_auth %>
							<span class='prior-auth'>Prior Authorization</span>
						<% end %>
            <% if formulary_drug.prior_auth_newstart %>
		          <span class='prior-auth'>Prior Authorization New Starts Only</span>
            <% end %>
						<% if formulary_drug.step_therapy %>
							<span class='step-therapy'>Step Therapy</span>
						<% end %>
            <% if formulary_drug.step_therapy_newstart %>
		          <span class='step-therapy'>Step Therapy New Starts Only</span>
            <%end%>
						<% if formulary_drug.quantity_limit %>
							<span class='quantity-limit'>Quantity Limit</span>
						<% end %>
					</td>
					<td><%= formulary_drug.drug_tier.split('-').map(&:capitalize).join(' ') %> </td>
					<td>$<%=formulary_drug.copay%></td>
					<td> <%=formulary_drug.coinsurancerate%>%</td>
					<td><%= link_to formulary_drug.plan_id_name , formulary_drug.plan_id_path %></td>
					<td><%= link_to formulary_drug.rxnorm_code, formulary_drug.rxnorm_path %></td>
					<td><%= formulary_drug.id %></td>
				</tr>
			<% end %>
		</table>
		<div class='col-12'>
			<div class='btn-group float-right mt-2' role='group'>
				<%= link_to 'Previous', formularies_path(page: 'previous'), class: 'btn btn-outline-primary' %>
				<%= link_to 'Next', 		formularies_path(page: 'next'), 		class: 'btn btn-outline-primary' %>
			</div>
		</div>
	</section>
</section>
