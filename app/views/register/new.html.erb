<section class="container vh-100 ">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h4 class="text-uppercase text-center mb-5">Register client to a server</h4>

              <%= form_tag register_index_path, method: "post", id: "server-form" do %>

                <div class="form-outline mb-4">
                  <%= text_field_tag :server_url, nil, class: "form-control form-control-lg",
                                                       placeholder: "https://davinci-drug-formulary-ri.logicahealth.org/fhir" %>
                  <label class="form-label" for="form3Example3cg">Server URL</label>
                </div>

                <div class="d-flex justify-content-center">
                  <button type="button" class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">Register</button>
                </div>

                <p class="text-center text-muted mt-5 mb-0">Already have credentials? <%= link_to "Connect to a server here", patients_path, class: "fw-bold text-primary" %></p>

              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>