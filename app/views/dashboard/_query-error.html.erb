<div class="d-flex align-items-center justify-content-center mt-0 ">
  <div class="text-center text-white mt-0">
    <h1 class="display-3 fw-bold"><%= @request_faillure ? "Something went wrong " : "#{resource_type} Not Found or Invalid" %></h1>
    <p class="fs-3"> <span class="text-danger">Opps!</span> <%= @request_faillure ? "Server was unable to process your request." : "#{not_found_message}" %></p>
    <% if @request_faillure %>
      <p class="lead">
        Error message from the server:
      </p>
      <p class="fs-2 fw-bolder text-danger"><%= @request_faillure %></p>
      <%= link_to 'Go Home', root_path, class: 'btn btn-primary' %>
    <% else %>
      <%= link_to 'Browse Coverage Plans', coverageplans_path, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
