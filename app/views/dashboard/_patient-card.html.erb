<div class='card bg-dark text-white'>
  <div class='card-header'>
    Patient:
    <h2>
      <% @patient.name.each do |name| %>
        <%= display_human_name(name) %><br>
      <% end %>
    </h2>
    <br>
    Patient ID: <%= sanitize(@patient.id) %> <br>
  </div>
  <div class='card-body'>
    <div class='row patient-info'>
      <div class='col-6'>
        <%= display_photo(@patient.photo, @patient.gender, class: 'profile-photo') %>
      </div>
      <div class='col-6'>
        <table class='table table-striped table-dark status'>
          <tr>
            <td>Gender</td>
            <td><%= sanitize(@patient.gender) %></td>
          </tr>
          <tr>
            <td>DOB</td>
            <td><%= sanitize(@patient.birthDate) %></td>
          </tr>
        </table>
      </div>
    </div>
    <div class='row address'>
      <table class='table table-striped table-dark status caption-top'>
      <caption><%= pluralize(@patient.address.count, 'Address') %></caption>
        <% @patient.address.each do |address| %>
          <%= render partial: 'partials/address', locals: { address: address } %>
        <% end %>
       </table>
    </div>
  </div>
</div>
